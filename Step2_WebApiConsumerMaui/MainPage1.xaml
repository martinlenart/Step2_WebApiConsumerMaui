<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Step2_WebApiConsumerMaui.MainPage1">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label x:Name="lblConnectionStatus" Text="Could not connect" HorizontalOptions="Center" FontSize="Large" FontAttributes="Bold"/>

            <Label Text="{Binding Title}" HorizontalOptions="Center" FontAttributes="Bold"/>
            <Label Text="{Binding Author}" HorizontalOptions="Center"/>
            <Label Text="{Binding Version}" HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

